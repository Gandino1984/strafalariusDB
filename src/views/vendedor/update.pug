extends ../layout

block content 
    if error 
        p(class="error")= error
    if vendedor
        form(action="/vendedor/"+vendedor.id_vendedor, method="post") 
            label(for="name") Nombre 
            input(id="name" type="text" name="nombre_vendedor" value=vendedor.nombre_vendedor) 
            label(for="origen") Origen
            input#origen(type="text", name="origen_vendedor" value=vendedor.origen_vendedor)
            label(for="categoria") Categoria
            input#categoria(type="checkbox", name="categoria_vendedor" checked=vendedor.categoria_vendedor ? true:false)  
            button(type="submit") Guardar

